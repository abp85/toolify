<div class="header">
  <div class="container">
    <div class="toolify-navbar">
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="search-form mt-5">
      <form action="">
        <div class="input-group mb-3">
          <input type="text" class="form-control input-height" placeholder="Where do you want your tool?">
          <div class="input-group-append">
            <%= link_to "Search", tools_path, class: "btn-flat btn-upload" %>
          </div>
        </div>
      </form>
    </div>
    <div class="home-banner w-100 p-5 mt-5 mb-5">
      <h1>Find the tool you miss</h1>
      <h3>Choose your location and the tool you need</h3>
      <!-- <button class="btn btn-flat">Get a tool</button> -->
    </div>

        <!-- CHANGE THE SRC OF THE IMG -->


      <div class="cards">
      <% @tools.take(4).each do |tool|  %>
      <div class="home-cards">
      <% if tool.photo.attached? %>
        <%= cl_image_tag tool.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <img class="img-show" src="https://bekservice.de/wp-content/uploads/2016/12/tools_cropped.jpg">
      <% end %>
  <!--       <img src="https://cdn.pixabay.com/photo/2020/05/26/07/03/screwdriver-5221738__340.jpg" /> -->
        <div class="home-cards-infos">
          <div>
            <h2><%= tool.name%></h2>
            <p><%= tool.description %></p>
          </div>
         <%= link_to tool_path(tool) do %>
        <i class="far fa-eye tool-icon"></i>
        <% end %>
        </div>
      </div>
      <% end %>
      </div>
    </div>
</div>

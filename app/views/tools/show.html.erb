<div class="container show-page">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h1 class="header-show"><%= @tool.name %></h1>
      <p class="p-show"><%= @tool.description %></p>
      <% if @tool.photo.attached? %>
        <%= cl_image_tag @tool.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <img class="img-show" src="https://bekservice.de/wp-content/uploads/2016/12/tools_cropped.jpg">
      <% end %>
      <hr>
      <p class="p-show p-show-details"><strong>Location: </strong><%= @tool.location %></p>
      <p class="p-show p-show-details"><strong>Price: </strong><%= @tool.price %>â‚¬/day</p>
      <p class="p-show p-show-details"><strong>Owner: </strong><%= @tool.user.first_name %> <%= @tool.user.last_name %></p>
      <br>
      <%= link_to 'Back', tools_path, :class => "btn-flat" %>
    </div>
  </div>
</div>
